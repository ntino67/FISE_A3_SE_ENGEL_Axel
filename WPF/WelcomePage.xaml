<Page x:Class="WPF.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="WelcomePage"
      Background="#1e1e2e">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Source="pack://application:,,,/Image/EasySave_Logos.png"
                   Width="250" Height="250"
                   Margin="0,30,0,00"/>

            <TextBlock Text="Manage Your Backups with EasySave !"
                       FontSize="48"
                       FontWeight="Bold"
                       Foreground="White"
                       TextAlignment="Center"
                       Margin="0,0,0,00"/>

            <TextBlock Text="Simplify the management of your backups today."
                       FontSize="32"
                       Foreground="LightGray"
                       TextAlignment="Center"
                       Margin="0,0,0,00"/>
            
            <Image Source="pack://application:,,,/Image/UserIcon_colored.png"
                   Width="500" Height="400"
                   Margin="0,0,0,20"/>
        </StackPanel>
    </Grid>
</Page>
