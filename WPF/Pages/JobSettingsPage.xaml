<Page x:Class="WPF.Pages.JobSettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:conv="clr-namespace:WPF.Converter"
      xmlns:infrastructure="clr-namespace:WPF.Infrastructure"
      Title="JobPage"
      Background="#1E1E2E"
      DataContext="{x:Static infrastructure:ViewModelLocator.JobViewModel}">

    <Page.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibility" />

        <Style x:Key="FadeButtonStyle" TargetType="Button">
            <Setter Property="Opacity" Value="0"/>
            <Setter Property="Background" Value="#F9E2AF"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="IsHitTestVisible" Value="False"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Width" Value="250"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding HasJobMessage}" Value="True">
                    <DataTrigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                 To="1" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.EnterActions>
                    <DataTrigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                 To="0" Duration="0:0:0.3"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.ExitActions>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="DiffFullToggleStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="250"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <!-- FOND -->
                            <Border x:Name="SwitchBorder"
                            Width="250" Height="40"
                            CornerRadius="20"
                            Background="#45475a"
                            BorderBrush="#a6adc8"
                            BorderThickness="2"/>

                            <!-- THUMB -->
                            <Border x:Name="SwitchThumb"
                            Width="95" Height="34"
                            Background="#232336"
                            CornerRadius="17"
                            Margin="3"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            RenderTransformOrigin="0.5,0.5">
                                <Border.RenderTransform>
                                    <TranslateTransform X="0"/>
                                </Border.RenderTransform>
                                <Grid>
                                    <TextBlock x:Name="DiffText"
                                       Text="Differential"
                                       FontWeight="Bold"
                                       FontSize="14"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,0"
                                       Foreground="#CDD6F4"
                                       Visibility="Visible"/>
                                    <TextBlock x:Name="FullText"
                                       Text="Full"
                                       FontWeight="Bold"
                                       FontSize="14"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,0"
                                       Foreground="#CDD6F4"
                                       Visibility="Collapsed"/>
                                </Grid>
                            </Border>

                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="SwitchBorder" Property="Background" Value="#a6e3a1"/>
                                <Setter TargetName="SwitchThumb" Property="HorizontalAlignment" Value="Right"/>
                                <Setter TargetName="DiffText" Property="Visibility" Value="Collapsed"/>
                                <Setter TargetName="FullText" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter TargetName="SwitchBorder" Property="Background" Value="#45475a"/>
                                <Setter TargetName="SwitchThumb" Property="HorizontalAlignment" Value="Left"/>
                                <Setter TargetName="DiffText" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="FullText" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


    </Page.Resources>

    <Grid Margin="20">
        <Grid Margin="20" Cursor="">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#313244" Padding="20" CornerRadius="10">
                <TextBox Text="{Binding CurrentJob.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     FontSize="28" Foreground="#CDD6F4" Background="Transparent"
                     BorderThickness="0" HorizontalAlignment="Center" />
            </Border>

            <!-- Body -->
            <StackPanel Grid.Row="1" Margin="0,20" HorizontalAlignment="Center" VerticalAlignment="Top">
                <Button Content="{Binding SourceDirectoryLabel}"
                    ToolTip="{Binding CurrentJob.SourceDirectory}"
                    Click="OnSetSourcePathClick"
                    Width="250" Height="45"
                    BorderBrush="#89B4FA" Foreground="#CDD6F4" Margin="0,5"
                    Style="{StaticResource RoundedButtonStyle}" />
                <Button Content="{Binding TargetDirectoryLabel}"
                    ToolTip="{Binding CurrentJob.TargetDirectory}"
                    Click="OnSetTargetPathClick"
                    Width="250" Height="45"
                    BorderBrush="#89B4FA" Foreground="#CDD6F4" Margin="0,5"
                    Style="{StaticResource RoundedButtonStyle}"
                    Cursor="Hand" />

                <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,2,2">
                    <ToggleButton IsChecked="{Binding IsActive, Mode=TwoWay}" Style="{StaticResource DiffFullToggleStyle}"/>
                </StackPanel>

                <!-- Encryption UI -->
                <Grid Width="250" Height="30" Margin="0,5">
                    <TextBox x:Name="KeyInput"
                         Text="{Binding EncryptionKey, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Background="#313244"
                         Foreground="#CDD6F4"
                         BorderBrush="#A6ADC8"
                         FontSize="16" />

                    <TextBlock Text="Enter an Encryption Key..."
                           Foreground="#6C7086"
                           Margin="10,0,0,0"
                           VerticalAlignment="Center"
                           IsHitTestVisible="False"
                           Visibility="{Binding Text, ElementName=KeyInput, Converter={StaticResource BoolToVisibility}}" />
                </Grid>
                <Button Content="{Binding EncryptionStatus}" 
                    Command="{Binding ToggleEncryptionCommand}"
                    Width="250" Height="45"
                    Style="{StaticResource RoundedButtonStyle}"
                    BorderBrush="#F9E2AF" Foreground="#CDD6F4" Margin="0,5" />

                <!-- Commands -->
                <Button Content="{DynamicResource Run}" Command="{Binding RunBackupCommand}"
                    Style="{StaticResource RoundedButtonStyle}"
                    Width="250" Height="45" BorderBrush="#A6E3A1" Foreground="#CDD6F4" Margin="0,5" />
                <Button Content="{DynamicResource Delete}"
                    Command="{Binding DeleteJobCommand}"
                    CommandParameter="{Binding CurrentJob}"
                    Width="250" Height="45"
                    BorderBrush="#F38BA8" Foreground="#CDD6F4"
                    Style="{StaticResource RoundedButtonStyle}"
                    Margin="0,5" />
                <Button Content="{DynamicResource Reset}" Command="{Binding ResetJobCommand}" Width="250" Height="45" BorderBrush="#89DCEB"
                    Style="{StaticResource RoundedButtonStyle}"
                    Foreground="#CDD6F4" Margin="0,5" />
                <Grid Margin="10" Height="20" VerticalAlignment="Bottom">
                    <!-- Barre de progression -->
                    <ProgressBar Name="TaskProgressBar"
                 Minimum="0"
                 Maximum="100"
                 Value="{Binding Progress}"
                 ValueChanged="TaskProgressBar_ValueChanged" BorderThickness="1,1,1,1">
                    </ProgressBar>

                    <!-- Texte superposé centré -->
                    <TextBlock Text="{Binding Progress, StringFormat={}{0:0}%}"
               Foreground="Black"
               FontWeight="Bold"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"/>
                </Grid>

            </StackPanel>
        </Grid>
    </Grid>
</Page>
