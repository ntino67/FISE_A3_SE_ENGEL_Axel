<Page x:Class="WPF.Pages.BackupStatusPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:WPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="1000"
      Title="StatusPage"
      Background="#1e1e2e">
    <Page.Resources>

        <SolidColorBrush x:Key="SapphireBrush" Color="#74c7ec"/>

        <!-- Style for circular buttons with colored borders -->
        <Style x:Key="CircleButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse x:Name="ButtonBorder" 
                                     Fill="Transparent"
                                     Stroke="{TemplateBinding BorderBrush}"
                                     StrokeThickness="{TemplateBinding BorderThickness}"/>
                            <Ellipse x:Name="ButtonEllipse" 
                                     Fill="{TemplateBinding Background}" 
                                     Margin="2"/>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonEllipse" Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonEllipse" Property="Opacity" Value="0.6"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="ButtonEllipse" Property="Opacity" Value="0.4"/>
                                <Setter TargetName="ButtonBorder" Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style for column headers -->
        <Style x:Key="ColumnHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#232334"/>
            <Setter Property="Foreground" Value="#cdd6f4"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>

        <!-- Style for colored text based on action -->
        <Style x:Key="ActionTextBlockStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Instruction}" Value="Encrypt">
                    <Setter Property="Foreground" Value="#cdd6f4"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Instruction}" Value="Backup">
                    <Setter Property="Foreground" Value="#cdd6f4"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Instruction}" Value="Decrypt">
                    <Setter Property="Foreground" Value="#cdd6f4"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Style for colored text based on status -->
        <Style x:Key="StatusTextBlockStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Status}" Value="Success">
                    <Setter Property="Foreground" Value="#cdd6f4"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Error">
                    <Setter Property="Foreground" Value="#cdd6f4"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Paused">
                    <Setter Property="Foreground" Value="#cdd6f4"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Stopped">
                    <Setter Property="Foreground" Value="#cdd6f4"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Running">
                    <Setter Property="Foreground" Value="#cdd6f4"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Style for progress bar -->
        <Style x:Key="CustomProgressBarStyle" TargetType="ProgressBar">
            <Setter Property="Height" Value="20"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Border BorderBrush="#444" BorderThickness="1" Background="#1A1B26">
                            <Grid x:Name="PART_Track">
                                <Rectangle x:Name="PART_Indicator" 
                                           HorizontalAlignment="Left" 
                                           Fill="#A6E3A1" 
                                           Width="{TemplateBinding Value, Converter={StaticResource ProgressToWidthConverter}}"/>
                                <TextBlock Text="{Binding Value, RelativeSource={RelativeSource TemplatedParent}, StringFormat={}{0:0}%}" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center" 
                                           Foreground="#cdd6f4"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style for time values -->
        <Style x:Key="TimeTextBlockStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#cdd6f4"/>
        </Style>

        <!-- Style for centered text in cells -->
        <Style x:Key="CenteredCellStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Page.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- En-tête de page -->
        <TextBlock Text="Backup Status" 
                   FontSize="28" 
                   FontWeight="Bold" 
                   Foreground="#cdd6f4" 
                   Margin="0,0,0,20" 
                   HorizontalAlignment="Left"/>
        
        <Border Grid.Row="1"
                Background="#232336"
                BorderThickness="2" 
                CornerRadius="10">
            <!-- Status Grid -->
            <DataGrid ItemsSource="{Binding JobStatusItems}" 
                      AutoGenerateColumns="False" 
                      HeadersVisibility="Column"
                      Background="#232334" 
                      Foreground="White" 
                      RowBackground="#313244"
                      BorderBrush="Transparent" 
                      BorderThickness="0" 
                      CanUserAddRows="False" 
                      CanUserDeleteRows="False"
                      IsReadOnly="True"
                      GridLinesVisibility="Horizontal"
                      HorizontalGridLinesBrush="#232334"
                      ColumnHeaderStyle="{StaticResource ColumnHeaderStyle}"
                      VerticalContentAlignment="Center">
                <DataGrid.Resources>
                    <local:ProgressToWidthConverter x:Key="ProgressToWidthConverter"/>
                </DataGrid.Resources>
                
                <DataGrid.Columns>
                    <!-- Interaction Column -->
                    <DataGridTemplateColumn Header="Interaction" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Button Style="{StaticResource CircleButtonStyle}" 
                                            Background="#232336" 
                                            BorderBrush="#A6E3A1"
                                            Margin="3,0" 
                                            Command="{Binding DataContext.RunCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"
                                            ToolTip="Run">
                                        <Path Fill="#cdd6f4" Data="M8,5.14V19.14L19,12.14L8,5.14Z" Width="24" Height="24"/>
                                    </Button>
                                    <Button Style="{StaticResource CircleButtonStyle}" 
                                            Background="#232336" 
                                            BorderBrush="#F9E2AF"
                                            Margin="3,0" 
                                            Command="{Binding DataContext.PauseCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"
                                            ToolTip="Pause">
                                        <Path Fill="#cdd6f4" Data="M14,19H18V5H14M6,19H10V5H6V19Z" Width="24" Height="24"/>
                                    </Button>
                                    <Button Style="{StaticResource CircleButtonStyle}" 
                                            Background="#232336" 
                                            BorderBrush="#F38BA8"
                                            Margin="3,0" 
                                            Command="{Binding DataContext.StopCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"
                                            ToolTip="Stop">
                                        <Path Fill="#cdd6f4" Data="M18,18H6V6H18V18Z" Width="24" Height="24"/>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                    <!-- Job Name Column -->
                    <DataGridTemplateColumn Header="JobName" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding JobName}" 
                                           Style="{StaticResource CenteredCellStyle}"
                                           Foreground="#cdd6f4"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                    <!-- Instruction Column -->
                    <DataGridTemplateColumn Header="Instruction" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Instruction}" 
                                           Style="{StaticResource ActionTextBlockStyle}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                    <!-- Progress Bar Column -->
                    <DataGridTemplateColumn Header="Progress" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <ProgressBar Value="{Binding Progress}" 
                                             Minimum="0" 
                                             Maximum="100" 
                                             Width="160" 
                                             Height="20"
                                             Background="#313244"
                                             BorderBrush="#444"
                                             BorderThickness="1"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center">
                                    <ProgressBar.Foreground>
                                        <SolidColorBrush Color="#A6E3A1"/>
                                    </ProgressBar.Foreground>
                                    <ProgressBar.Template>
                                        <ControlTemplate TargetType="ProgressBar">
                                            <Border BorderBrush="{TemplateBinding BorderBrush}" 
                                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                                    Background="{TemplateBinding Background}">
                                                <Grid>
                                                    <Rectangle x:Name="PART_Track"/>
                                                    <Rectangle x:Name="PART_Indicator" 
                                                               Fill="{TemplateBinding Foreground}" 
                                                               HorizontalAlignment="Left">
                                                        <Rectangle.Width>
                                                            <MultiBinding Converter="{StaticResource ProgressToWidthConverter}">
                                                                <Binding RelativeSource="{RelativeSource Mode=TemplatedParent}" Path="Value"/>
                                                                <Binding RelativeSource="{RelativeSource Mode=TemplatedParent}" Path="Minimum"/>
                                                                <Binding RelativeSource="{RelativeSource Mode=TemplatedParent}" Path="Maximum"/>
                                                                <Binding RelativeSource="{RelativeSource Mode=TemplatedParent}" Path="ActualWidth"/>
                                                            </MultiBinding>
                                                        </Rectangle.Width>
                                                    </Rectangle>
                                                    <TextBlock Text="{Binding Progress, StringFormat={}{0:0}%}"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"
                                                               Foreground="#cdd6f4"/>
                                                </Grid>
                                            </Border>
                                        </ControlTemplate>
                                    </ProgressBar.Template>
                                </ProgressBar>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                    <!-- Start Time Column -->
                    <DataGridTemplateColumn Header="Start Time" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding StartTime, StringFormat=yyyy-MM-dd HH:mm:ss}" 
                                           Style="{StaticResource TimeTextBlockStyle}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                    <!-- End Time Column -->
                    <DataGridTemplateColumn Header="End Time" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding EndTime, StringFormat=yyyy-MM-dd HH:mm:ss}" 
                                           Style="{StaticResource TimeTextBlockStyle}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                    <!-- Output Column -->
                    <DataGridTemplateColumn Header="Output" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Status}" 
                                           Style="{StaticResource StatusTextBlockStyle}" 
                                           HorizontalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Page>
